import java.util.Scanner;

public class Main {
	
	public static void main(String[]args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.printf("Qual será a String Original?   ");
		String original = sc.nextLine();
		System.out.println("A String Original foi definidada como: -" + original + "- ");
		
		String minuscula = original.toLowerCase();
		System.out.println("String Original em minúsculo: -" + minuscula + "- ");
		
		String maiuscula = original.toUpperCase();
		System.out.println("String Original em maiúsculo: -" + maiuscula + "- ");
		
		String semEspacos= original.trim();
		System.out.println("String Original em trim: -" + semEspacos + "- ");
		
		String subString = original.substring(2);
		System.out.println("String Original cortada com parâmetro de início: -" + subString + "- ");
		
		String corte = original.substring(2, 5);
		System.out.println("String Original cortada com parâmetro de início e fim: -" + corte + "- ");
		
		sc.close();
	}
}
