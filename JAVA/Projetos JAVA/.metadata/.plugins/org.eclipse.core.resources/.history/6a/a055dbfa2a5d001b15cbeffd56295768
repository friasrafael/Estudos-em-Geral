import java.util.Scanner;

public class Main {
	
	public static void main(String[]args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.printf("Qual será a String Original?   ");
		String original = sc.nextLine();
		System.out.println("A String Original foi definidada como: " + original);
		
		String minuscula = original.toLowerCase();
		System.out.println("String Original em minúsculo: " + minuscula);
		
		sc.close();
	}
}
