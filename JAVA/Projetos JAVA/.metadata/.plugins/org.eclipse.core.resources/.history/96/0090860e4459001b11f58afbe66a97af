import java.util.Scanner;

public class Main {

	public static void main(String[] arg) {

		Scanner sc = new Scanner(System.in);

		int alcool = 0;
		int gasolina = 0;
		int diesel = 0;
		int litrosD = 0;
		int litrosA = 0;
		int litrosG = 0;
		double precoAlcool = 3.12;
		double precoDiesel = 2.53;
		double precoGasolina = 4.25;
		double lucroAlcool;
		double lucroDiesel;
		double lucroGasolina;
		double lucroTotal;


		System.out.println("Tipo de combustível:");
		int combustivel = sc.nextInt();
		
		
		if (combustivel == 0) {
			System.out.println("Litros Abastecidos:");
			litrosD = sc.nextInt();
			
		}

		if (combustivel == 4) {
			System.out.println("Muito Obrigado!");
			System.out.println("Tabela de vendas por tipo de combustível:");
			System.out.println("Álcool: " + alcool);
			System.out.println("Diesel: " + diesel);
			System.out.println("Gasolina: " + gasolina);

			lucroAlcool = alcool * precoAlcool;
			lucroDiesel = diesel * precoDiesel;
			lucroGasolina = gasolina * precoGasolina;
			lucroTotal = lucroAlcool + lucroDiesel + lucroGasolina;

			System.out.printf(
					"%nLucro Bruto das vendas:%nLucro do Álcool: R$ %.2f %nLucro do Diesel: R$ %.2f %nLucro da Gasolina: R$ %.2f %nLucro Total: R$ %.2f %n",
					lucroAlcool, lucroDiesel, lucroGasolina, lucroTotal);
		}

		sc.close();
	}

}
